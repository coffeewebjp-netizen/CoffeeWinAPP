<Window x:Class="AutoKeyInputApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="自動キー／クリック入力" Height="280" Width="360">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- 動作選択 -->
			<RowDefinition Height="Auto"/>
			<!-- キー入力 -->
			<RowDefinition Height="Auto"/>
			<!-- 間隔入力 -->
			<RowDefinition Height="Auto"/>
			<!-- 継続時間入力 -->
			<RowDefinition Height="Auto"/>
			<!-- ボタン -->
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- 動作選択 -->
		<TextBlock Grid.Row="0" Grid.Column="0"
				   Text="動作：" VerticalAlignment="Center" Margin="0,0,5,0"/>
		<ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbAction"
				  SelectedIndex="0" Width="200" Margin="0,0,0,5">
			<ComboBoxItem Content="キー入力"/>
			<ComboBoxItem Content="クリック"/>
		</ComboBox>

		<!-- キー入力 -->
		<TextBlock Grid.Row="1" Grid.Column="0"
				   Text="キー：" VerticalAlignment="Center" Margin="0,0,5,0"/>
		<TextBox Grid.Row="1" Grid.Column="1"
				 x:Name="txtKey" Width="200"/>

		<!-- 間隔入力 -->
		<TextBlock Grid.Row="2" Grid.Column="0"
				   Text="間隔 (ms)：" VerticalAlignment="Center" Margin="0,10,5,0"/>
		<TextBox Grid.Row="2" Grid.Column="1"
				 x:Name="txtInterval" Width="200" Margin="0,10,0,0"/>

		<!-- 継続時間入力 -->
		<TextBlock Grid.Row="3" Grid.Column="0"
				   Text="継続時間 (秒)：" VerticalAlignment="Center" Margin="0,10,5,0"/>
		<TextBox Grid.Row="3" Grid.Column="1"
				 x:Name="txtDuration" Width="200" Margin="0,10,0,0"/>

		<!-- ボタン群 -->
		<UniformGrid Grid.Row="4" Grid.ColumnSpan="2"
					 Columns="3"
					 HorizontalAlignment="Center"
					 Margin="0,20,0,0">
			<Button x:Name="BtnStart"
					Content="スタート"
					Click="BtnStart_Click"
					Padding="8,2"
					Margin="5,0"/>
			<Button x:Name="BtnStop"
					Content="ストップ"
					Click="BtnStop_Click"
					IsEnabled="False"
					Padding="8,2"
					Margin="5,0"/>
			<Button x:Name="BtnClear"
					Content="クリア"
					Click="BtnClear_Click"
					Padding="8,2"
					Margin="5,0"/>
		</UniformGrid>
	</Grid>
</Window>
